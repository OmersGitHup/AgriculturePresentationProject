@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Delete
                            </th>
                            <th>
                                Edit
                            </th>


                        </tr>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@item.ImageID" alt="image" />
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    <a href="/Image/DeleteImage/@item.ImageID" class="btn btn-outline-danger">Delete</a>
                                </td>
                                <td>
                                    <a href="/Image/EditImage/@item.ImageID" class="btn btn-outline-success">Edit</a>
                                </td>
                                
                            </tr>
                            
                        }
                        

                    </tbody>
                </table>
                @if (Model.Count == 0)
                {
                    <h4 class="alert alert-primary" role="alert">DATA HAS NOT BEEN ENTERED YET</h4>
                }
                <br />
                <a href="/Image/AddImage/" class="btn btn-outline-info">Add New Image</a>
            </div>
        </div>
    </div>
</div>