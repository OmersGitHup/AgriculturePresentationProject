@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">List of Image</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Delete
                            </th>
                            <th>
                                Edit
                            </th>
                            

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.ImageID
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    
                                </td>
                                <td>
                                    <a href="/Image/DeleteImage/@item.ImageID" class="btn btn-outline-danger">Delete</a>
                                </td>
                                <td>
                                    <a href="/Image/UpdateImage/@item.ImageID" class="btn btn-outline-success">Edit</a>
                                </td>
                               

                            </tr>
                        }


                    </tbody>
                </table>
                <a href="/Image/AddImage/" class="btn btn-outline-info">New Image</a>
            </div>
        </div>
    </div>
</div>

