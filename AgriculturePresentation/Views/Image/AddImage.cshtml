@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Saving New Image </h4>

            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Name Surname" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInput2" placeholder="Description" asp-for="Description">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Image Url</label>
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Image Url" asp-for="ImageURL">
                </div>
               
                <br />
                <button type="submit" class="btn btn-primary me-2">Save</button>
                <button href="/Image/Index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>

