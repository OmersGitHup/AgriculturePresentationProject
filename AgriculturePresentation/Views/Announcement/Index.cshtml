@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">List of Announcement</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Delete
                            </th>
                            <th>
                                Edit
                            </th>
                            <th>
                                Status
                            </th>
                            

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.AnnouncementId
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Date
                                </td>
                                <td>
                                    <a href="/Announcement/DeleteAnnouncement/@item.AnnouncementId" class="btn btn-outline-danger">Delete</a>
                                </td>
                                <td>
                                    <a href="/Announcement/UpdateAnnouncement/@item.AnnouncementId" class="btn btn-outline-success">Edit</a>
                                </td>

                                @if (item.Status == true)
                                {
                                    <td>
                                        <a href="/Announcement/ChangeStatusToFalse/@item.AnnouncementId" class="btn btn-outline-secondary">Deactivate</a>
                                    </td>
                                    
                                }else{
                                    <td>
                                        <a href="/Announcement/ChangeStatusToTrue/@item.AnnouncementId" class="btn btn-outline-warning">Activate</a>
                                    </td>
                                }

                                
                                

                            </tr>
                        }


                    </tbody>
                </table>
                <br />
                <a href="/Announcement/AddAnnouncement/" class="btn btn-outline-info">New Announcement</a>
            </div>
        </div>
    </div>
</div>
