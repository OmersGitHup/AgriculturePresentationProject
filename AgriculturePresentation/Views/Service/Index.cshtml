@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">List of Service</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Delete
                            </th>
                            <th>
                                Edit
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.ServiceId
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    <a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger">Delete</a>
                                </td>
                                <td>
                                    <a href="/Service/UpdateService/@item.ServiceId" class="btn btn-outline-success">Edit</a>
                                </td>

                            </tr>
                        }


                    </tbody>
                </table>
                <a href="/Service/AddService/" class="btn btn-outline-info">New Service</a>
            </div>
        </div>
    </div>
</div>