@model AgriculturePresentation.Models.ServiceAddViewModel
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Service</h1>

<form method="post">
    <div class="form-group">
    @Html.Label("Title")
    <span asp-validation-for="Title" class="text-danger"></span>
    <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Image Url")
        <input type="text" asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.Label("Description")
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button class="btn btn-outline-info">Save New Service</button>
</form>

