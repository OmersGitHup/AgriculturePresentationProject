@model EntityLayer.Concrete.Admin
@{
    ViewData["Title"] = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> New Admin </h4>

            <form method="post" class="forms-sample">

                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control"  placeholder="Username" asp-for="Username">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="text" class="form-control"  placeholder="Password" asp-for="Password">
                </div>
               


                <button type="submit" class="btn btn-primary me-2">Save</button>
                <button href="/Admin/Index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>