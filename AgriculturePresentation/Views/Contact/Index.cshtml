@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Arkadaşlarımızın Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ContactID</th>
                            <th>Name</th>
                            <th>Message</th>
                            <th>Details</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(item => item.ContactID))
                        {
                            <tr>
                                <td>@item.ContactID</td>
                                <td>@item.Name</td>
                                <td>@item.Message</td>
                                <td><a href="/Contact/MessageDetails/@item.ContactID" class="btn btn-outline-primary">Detail</a></td>
                                <td><a href="/Contact/DeleteMessage/@item.ContactID" class="btn btn-outline-danger">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.Count == 0)
            {
                <h4 class="alert alert-primary" role="alert">NO MESSAGE IN THE BOX</h4>
            }
            <br />
        </div>
    </div>
</div>

