@model AgriculturePresentation.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profile Edit Page </h4>
            
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label>Mail Address</label>
                
                    <input type="text" class="form-control" placeholder="Mail Address" asp-for="Mail">
                </div>
                <div class="form-group">
                    <label >Phone Number</label>                   
                    <input type="text" class="form-control" id="exampleInput2" placeholder="Phone Number" asp-for="Phone">
                </div>
                <div class="form-group">
                    <label>Password</label>                
                    <input type="text" class="form-control" placeholder="Password" asp-for="Password">
                </div>
                <div class="form-group">
                    <label >Confirm Password</label>
                    <input type="text" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword">
                </div>

                <br />
                <button type="submit" class="btn btn-primary me-2">Save</button>
                <button href="/Image/Index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
